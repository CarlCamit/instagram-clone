<p id="notice"><%= notice %></p>

<section>
  <% @photos.each do |photo| %>
    <article>
      <%= link_to photo do %>
        <figure>
          <%= image_tag photo.image.url, class: 'img-fluid', alt: photo.description %>
        </figure>
      <% end %>
    </article>
  <% end %>
</section>

<div class="nav sticky-top justify-content-center pt-2 pb-2 bg-light">
  <%= link_to 'New Photo', new_photo_path, class: 'btn btn-primary' %>
  <%= link_to 'Back', root_url, class: 'btn btn-primary' %>
</div>