<p>
  <strong>Image data:</strong>
  <% if @photo.image.present? %>
    <p>
        <%= image_tag @photo.image_url %>
    </p>
    <p>
        Desciption: <%= @photo.description %>
    </p>
    <p>
        Location: <%= @photo.location %>
    </p>
  <% end %>
</p>

<!-- Like button -->
<%= form_with(model: @photo, method: :patch) do |f|%>
  <% toggle_like = @photo.liked_by?(current_user) %>
  <%= f.hidden_field :toggle_like, value: toggle_like %>
  <%= f.button toggle_like ? 'Unlike' : 'Like' %>
<% end %>

<% if current_user == @photo.user %>
  <%= link_to 'Edit', edit_photo_path(@photo) %>
